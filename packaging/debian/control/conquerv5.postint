#!/bin/bash

set -e

case "$1" in
    configure)
        # Ensure game directory has correct permissions
        if [ -d /usr/share/conquerv5 ]; then
            chmod 755 /usr/share/conquerv5
            chmod 644 /usr/share/conquerv5/* 2>/dev/null || true
        fi

        # Ensure executables are properly executable
        if [ -f /usr/bin/conquer ]; then
            chmod 755 /usr/bin/conquer
        fi
        if [ -f /usr/bin/conqrun ]; then
            chmod 755 /usr/bin/conqrun
        fi

        echo "ConquerV5 game installed successfully!"
        echo ""
        echo "ðŸŽ® ConquerV5 - Modernized Classic Strategy Game"
        echo "================================================"
        echo ""
        echo "ðŸš€ Quick Start:"
        echo "   conquer           # Start the game"
        echo "   conqrun -h        # Administrative options"
        echo ""
        echo "ðŸ“– Features:"
        echo "   â€¢ Cross-platform modernized build system"
        echo "   â€¢ Classic 1987-1992 gameplay preserved"
        echo "   â€¢ Full ncurses terminal interface"
        echo "   â€¢ Multiplayer fantasy war scenarios"
        echo "   â€¢ Magical powers and tactical combat"
        echo ""
        echo "ðŸ“ Game data: /usr/share/conquerv5/"
        echo "ðŸ“š Documentation: /usr/share/doc/conquerv5/"
        ;;

    abort-upgrade|abort-remove|abort-deconfigure)
        ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
        ;;
esac

#DEBHELPER#

exit 0
